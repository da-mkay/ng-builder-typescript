{
  "name": "@da-mkay/ng-builder-typescript",
  "version": "0.0.1",
  "description": "A builder for the Angular CLI to build node apps using the typescript compiler tsc (no webpack or any other bundler used).",
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json && npm run copy:json",
    "clean": "rimraf dist",
    "copy:json": "cpx 'src/**/*.json' ./dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '**/*.ts'"
    }
  },
  "keywords": [
    "angular",
    "ng",
    "tsc",
    "typescript",
    "builder",
    "watch"
  ],
  "author": "da-mkay (https://github.com/da-mkay)",
  "license": "MIT",
  "peerDependencies": {
    "@angular-devkit/architect": "^0.1102.0",
    "@angular-devkit/core": "^11.2.0",
    "typescript": ">=3.4 <=4.1",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1102.0",
    "@angular-devkit/core": "^11.2.0",
    "@types/node": "^14.14.26",
    "cpx": "^1.5.0",
    "husky": "^5.0.9",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "fs-extra": "^9.1.0"
  },
  "builders": "./dist/builders/builders.json"
}
