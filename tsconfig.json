{
    "compilerOptions": {
        "baseUrl": "tsconfig",
        "rootDir": "src",
        "lib": ["es2018"],
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es6",
        "types": ["node"],
        "outDir": "dist",
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/schematics/**/files/**/*.ts"]
}
